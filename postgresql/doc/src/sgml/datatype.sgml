        <entry>说明</entry>
        <entry>表现形式</entry>
       </row>
      </thead>
      <tbody>
       <row>
        <entry><type>point</type></entry>
        <!-- 
<entry>16 bytes</entry>
        <entry>Point on a plane</entry> 
-->
